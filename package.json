{
  "name": "data-reconciliation-client",
  "version": "1.0.0",
  "description": "Data Reconciliation Client - cross-platform Electron app",
  "main": "main.js",
  "author": "knwanna",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/knwanna/data-reconciliation-client-win32-x64.git"
  },
  "bugs": {
    "url": "https://github.com/knwanna/data-reconciliation-client-win32-x64/issues"
  },
  "homepage": "https://github.com/knwanna/data-reconciliation-client-win32-x64#readme",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --dir",
    "dist": "electron-builder --publish never",
    "pack:win": "electron-builder --win --x64",
    "pack:mac": "electron-builder --mac",
    "pack:linux": "electron-builder --linux",
    "ci-validate": "bash .github/scripts/ci-validate.sh || node .github/scripts/generate-defaults.js",
    "lint": "eslint src || echo 'No lint config, skipping.'",
    "test": "echo \"No tests defined. Skipping...\"",
    "postinstall": "node .github/scripts/generate-defaults.js"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0"
  },
  "dependencies": {},
  "build": {
    "appId": "com.knwanna.datareconciliation",
    "productName": "Data Reconciliation Client",
    "asar": true,
    "compression": "maximum",
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "package.json",
      "build/**/*",
      "!node_modules/**/test/**"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png"
    }
  }
}
