{
  "name": "data-reconciliation-client",
  "version": "1.0.0",
  "description": "Cross-platform Electron client for Data Reconciliation (Windows, macOS, Linux).",
  "main": "src/main.js",
  "author": "KNwanna <youremail@example.com>",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start\"",
    "build": "electron-builder --dir",
    "dist": "electron-builder --publish never",
    "release": "electron-builder --publish always"
  },
  "build": {
    "appId": "com.knwanna.datareconciliation",
    "productName": "Data Reconciliation Client",
    "files": [
      "src/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": ["nsis", "zip"],
      "compression": "maximum",
      "artifactName": "data-reconciliation-client-${version}-win.${ext}"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.utilities",
      "artifactName": "data-reconciliation-client-${version}-mac.${ext}"
    },
    "linux": {
      "target": ["AppImage", "deb", "tar.gz"],
      "artifactName": "data-reconciliation-client-${version}-linux.${ext}"
    }
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^24.13.3",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {}
}
